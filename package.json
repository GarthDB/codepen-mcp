{
  "name": "codepen-mcp",
  "version": "1.0.0",
  "description": "MCP server for ingesting and inspecting CodePen pens",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "codepen-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc && node dist/index.js",
    "prepare": "npm run build",
    "test": "ava"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "ava": "^6.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "ava": {
    "files": ["test/**/*.test.ts"],
    "extensions": ["ts"],
    "nodeArguments": ["--import=tsx/esm"],
    "workerThreads": false
  }
}
